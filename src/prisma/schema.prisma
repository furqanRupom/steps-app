generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}


model User {
    id String @id @default(uuid())
    email String @unique 
    password String 
    role UserRole @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    member Member?

    @@map("users")
}

model Member {
    id String @id @default(uuid())
    name String 
    email String @unique
    User User @relation(fields: [email],references: [email])
    contactNumber String
    ProfilePhoto String
    Address String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@map("members")

}

model Feedback {
    id       String @id @default(uuid())
    name     String
    email    String @unique
    feedback String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("feedbacks")
}


enum UserRole {
    USER 
    ADMIN
    SUPER_ADMIN
}